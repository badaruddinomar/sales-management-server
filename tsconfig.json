{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": false,
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
